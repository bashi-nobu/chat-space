.wrap
  .notice
    チャットグループが作成されました
  .sidebar
    .sidebar__header
      %h3.sidebar__header__name
        = current_user.name
      %ui.sidebar__header__lists
        %li.list
          = link_to "#" do
            = fa_icon "pencil-square-o"
        %li.list
          = link_to edit_user_path(current_user.id) do
            = fa_icon "cog"
    .sidebar__groups
      = render partial: "group"
  .chat
    .chat__header
      .chat__header_left
        .left-header__title
          sampleグループ
        .left-header__members
          Member:member1,member2
      .chat__header_right
        %a.right-header__button
          Edit
    .chat__main
      = render partial: "message"
    .form
      = render partial: "form"
