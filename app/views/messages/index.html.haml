.wrap
  .sidebar
    .sidebar__header
      %h3.sidebar__header__name
        = current_user.name
      %ui.sidebar__header__lists
        %li.list
          = link_to new_group_path do
            = fa_icon "pencil-square-o"
        %li.list
          = link_to edit_user_path(current_user.id) do
            = fa_icon "cog"
    .sidebar__groups
      = render partial: "./groups/group"
  .chat
    .chat__header
      .chat__header_left
        .left-header__title
          = @group.name
        .left-header__members
          Member:
          = @group.users.pluck(:name).join(", ")
      .chat__header_right
        %a.right-header__button
          Edit
    .chat__main
      = render partial: "message", collection: @messages
    .form
      = render partial: "form"
