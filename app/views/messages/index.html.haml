.wrap
  =render 'shared/side-bar'
  .chat
    .chat__header
      .chat__header_left
        .left-header__title
          = @group.name
        .left-header__members
          Member:
          = @group.users.pluck(:name).join(", ")
      .chat__header_right
        %a.right-header__button
          = link_to edit_group_path(@group.id) do
            %span
              Edit
    .chat__main
      = render partial: "message", collection: @messages
    .form
      = render partial: "form"
